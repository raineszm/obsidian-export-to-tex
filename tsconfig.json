{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es5",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "scripthost",
      "esnext"
    ],
    "rootDirs": [
      "src/", "types/"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
